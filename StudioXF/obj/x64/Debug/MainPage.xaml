<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudioXF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Text="using:System.Text"
    x:Class="StudioXF.MainPage"
    mc:Ignorable="d" Height="878">

    <Grid x:ConnectionId='1' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                      HorizontalAlignment="Left" Width="659" Height="436" VerticalAlignment="Top">
        <ComboBox x:ConnectionId='2' x:Name="FTPServer" HorizontalAlignment="Left" Margin="16,11,0,0" VerticalAlignment="Top" Width="212"                                              />
        <ListBox x:ConnectionId='3' x:Name="ServerFileList" Margin="16,127,0,0" RenderTransformOrigin="0.503,0.61"                                            HorizontalAlignment="Left" Width="212" Height="299" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='4' x:Name="ServerPath" HorizontalAlignment="Left" Margin="16,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="212"                                     />
        <Button x:ConnectionId='5' x:Name="GoUp" Content="Go Up" HorizontalAlignment="Left" Margin="253,70,0,0" VerticalAlignment="Top"                   />
        <ListBox x:ConnectionId='6' x:Name="LocalFiles" HorizontalAlignment="Left" Margin="343,127,0,0" Width="223"                                        Height="299" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='7' x:Name="LocalPath" Margin="343,68,0,0" Text="" VerticalAlignment="Top"                                     HorizontalAlignment="Left" Width="219" ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
        <Button x:ConnectionId='8' x:Name="GoUpLocal" Content="Go Up" HorizontalAlignment="Left" Margin="585,68,0,0" VerticalAlignment="Top"                         Height="32" Width="63"/>
        <Button x:ConnectionId='9' x:Name="CopyToServer" Content="&lt;- Copy" HorizontalAlignment="Left" Margin="253,160,0,0" VerticalAlignment="Top"                           />
        <Button x:ConnectionId='10' x:Name="CopyLocal" Content="Copy -&gt;" HorizontalAlignment="Left" Margin="253,219,0,0" VerticalAlignment="Top"                        />
        <Button x:ConnectionId='11' x:Name="AddFTPServer" Content="Add" HorizontalAlignment="Left" Margin="253,12,0,0" VerticalAlignment="Top" Width="63"                           />
        <ProgressRing x:ConnectionId='12'  x:Name="BusyIndicator" Foreground="Blue" Margin="253,107,354,280" Height="49" Width="52" />
    </Grid>
</Page>

